{
  "name": "anoma-explorer-indexer",
  "version": "0.1.0",
  "description": "Envio Hyperindex indexer for Anoma Protocol Adapter events",
  "type": "module",
  "scripts": {
    "clean": "tsc --clean",
    "build": "tsc --build",
    "watch": "tsc --watch",
    "gen-config": "node scripts/generate-config.cjs",
    "codegen": "pnpm gen-config && envio codegen",
    "dev": "pnpm gen-config && envio dev",
    "start": "envio start",
    "test": "ts-mocha --timeout 10000 test/**/*.test.ts"
  },
  "devDependencies": {
    "@types/chai": "^4.3.20",
    "@types/mocha": "10.0.6",
    "@types/node": "20.8.8",
    "chai": "4.3.10",
    "mocha": "10.2.0",
    "ts-mocha": "^10.1.0",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "envio": "^2.32.3",
    "viem": "^2.44.4"
  },
  "optionalDependencies": {
    "generated": "link:generated"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
